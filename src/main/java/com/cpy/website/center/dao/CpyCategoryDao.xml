<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cpy.website.center.dao.CpyCategoryDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.cpy.website.center.entity.CpyCategory" id="cpyCategoryMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="alias" column="alias"/>
        <result property="digest" column="digest"/>
        <result property="type" column="type"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="queryObject" resultMap="cpyCategoryMap">
        select *
        from cpy_category where id = #{value}
    </select>

    <select id="queryList" resultMap="cpyCategoryMap">
        select * from cpy_category
        where 1=1
        <if test="type != null">
            and type=#{type}
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>


        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <insert id="save" parameterType="com.cpy.website.center.entity.CpyCategory" useGeneratedKeys="true"
            keyProperty="id">
        insert into cpy_category(name,alias,digest,create_time,update_time) values
        (#{name},#{alias},#{digest},#{createTime},#{updateTime})

    </insert>

    <update id="update" parameterType="com.cpy.website.center.entity.CpyCategory">
        update cpy_category
        <set>
            <if test="name != null">
                `name` = #{name}
                ,
            </if>
            <if test="alias != null">
                `alias` = #{alias}
                ,
            </if>
            <if test="digest != null">
                `digest` = #{digest}
                ,
            </if>
            <if test="createTime != null">
                `create_time` = #{createTime}
                ,
            </if>
            <if test="updateTime != null">
                `update_time` = #{updateTime}
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
        delete from cpy_category where id = #{value}
    </delete>

    <delete id="deleteBatch">
        delete from cpy_category where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>